{% extends 'CajaBancoBackendBundle::base.html.twig' %}

{% block content %}    
    {# Renderizo el formulario de insercion dentro de este div#}    
    <div id="dialog-form" title="Agregar Cuenta Bancaria">
        <p>Atengase a los requerimientos.</p>  
        {% render "CajaBancoBackendBundle:CuentaBancaria:insertar"%}   
    </div> 
    
    {# Titulo #}
    <h3 class="content_title">Cuentas Bancarias</h3> 
    
    {# Al clickear aparece el formulario de insercion #}
    <button  id="agregar" class="medium inset">
        <span class="icon medium blue" data-icon="p"></span>Agregar
    </button> 
    
    {# Renderizo la lista de Cuentas Bancarias#}
    {% render "CajaBancoBackendBundle:CuentaBancaria:listar"%}    
{% endblock content %}
{% block javascripts %}    
    {{parent()}} 
    <script type="text/javascript" charset="utf-8">          
        $(document).ready( function () {               
           $( "#dialog-form" ).dialog({
                autoOpen: false,
		height: 420,
		width: 350,
		modal: true,
                resizable:false,
		close: function() {
                    allFields.val( "" ).removeClass( "ui-state-error" );
		}
            });			
            $("#agregar" ).click(function() {
                $( "#dialog-form" ).dialog( "open" );
            });
            $("#cancelar" ).click(function(event) {
                event.preventDefault();
                $( "#dialog-form" ).dialog( "close" );
            });
	});
    </script>    
{% endblock javascripts %}


