{% extends 'CajaBancoBackendBundle::base.html.twig' %}

{% block content %} 
    <h3 class="content_title left">Conceptos de Caja</h3>
    <div class="ex_highlight_row">
    <table class="display content_table" id="listado">
	<thead>
            <tr>
                <th>Descripcion</th>
		<th>Tipo de Movimiento</th>
                <th>Cuenta</th>
		<th>Contracuenta</th>                                       
            </tr>
	</thead>
	<tbody>
            {% for conceptoCaja in conceptosCaja %}
            <tr>
                <td>{{ conceptoCaja.descripcion }}</td>
                <td>{{ conceptoCaja.tipoMovimiento }}</td>
                <td>{{ conceptoCaja.cuenta }}</td>
                <td>{{ conceptoCaja.contracuenta }}</td>                
            </tr>
            {% endfor %}		
	</tbody>
	<tfoot>
            <tr>
		<th>Descripcion</th>
		<th>Tipo de Movimiento</th>
		<th>Cuenta</th>
		<th>Contracuenta</th>		
            </tr>
	</tfoot>
    </table>
    </div>        
{% endblock content %}

{% block javascripts %} 
     {{parent()}} 
    <script type="text/javascript" charset="utf-8">          
        $(document).ready( function () {               
            {# Se establece el formato de la tabla #} 
            var oTable = $('#listado').dataTable( {		
                "sDom": 'R<"H"lfr>t<"F"ip>',
		"bJQueryUI": true,
		"sPaginationType": "full_numbers", 
                "aLengthMenu": [[10, 25, 50, -1], [10, 25, 50, "Todos"]],
                "oLanguage": { "sUrl": "{{ asset('JTable/Lenguajes/spanish.txt') }}" }               
            } ); 
	});
    </script>  
{% endblock javascripts %}